<p>
  <strong><%= Comment.model_name.human %>: </strong>
  <table>
    <thead>
      <tr>
        <th><%= Comment.human_attribute_name(:body) %></th>
        <th><%= Comment.human_attribute_name(:name) %></th>
        <th><%= Comment.human_attribute_name(:created_at) %></th>
      </tr>
    </thead>

    <tbody>    
      <% commentable.comments.each do |comment| %>
        <tr>
          <td><%= comment.body %></td>
          <td><%= User.find(comment.user_id).name %></td>
          <td><%= comment.created_at.to_s(:datetime_jp) %></td>
          <% if current_user.id == comment.user_id %>
            <td><%= link_to t('views.common.destroy'), [commentable, comment], method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>
